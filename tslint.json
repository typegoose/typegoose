{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "rules": {
    "quotemark": {
      "severity": "warn",
      "options": [
        "single"
      ]
    },
    "indent": {
      "severity": "error",
      "options": [
        "spaces",
        2
      ]
    },
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "semicolon": {
      "severity": "error",
      "options": [
        "always"
      ]
    },
    "linebreak-style": [
      true,
      "LF"
    ],
    "max-line-length": [
      true,
      120
    ],
    "comment-format": {
      "options": [
        "check-space"
      ],
      "severity": "warn"
    },
    "whitespace": {
      "options": [
        "check-branch",
        "check-operator",
        "check-separator",
        "check-preblock",
        "check-branch",
        "check-module"
      ]
    },
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "require-const-for-all-caps",
      "allow-pascal-case"
    ],
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "member-access": [
      true,
      "check-accessor",
      "check-parameter-property"
    ],
    "array-type": [
      true,
      "array"
    ],
    "file-name-casing": [
      true,
      "camel-case"
    ],
    "trailing-comma": {
      "severity": "warn",
      "options": {
        "singleline": "never",
        "multiline": "never"
      }
    },
    "no-unused-variable": {
      "severity": "warn"
    },
    "no-unused-expression": {
      "severity": "warn"
    },
    "object-literal-key-quotes": {
      "severity": "warn",
      "options": "as-needed"
    },
    "no-trailing-whitespace": {
      "severity": "warn"
    },
    "await-promise": {
      "severity": "warn"
    },
    "space-before-function-paren": false,
    "encoding": true,
    "no-invalid-template-strings": true,
    "eofline": true,
    "restrict-plus-operands": true,
    "use-isnan": true,
    "no-duplicate-imports": true,
    "prefer-method-signature": true,
    "no-require-imports": true,
    "max-classes-per-file": false,
    "interface-name": false,
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "no-reference": true,
    "promise-function-async": true,
    "function-constructor": true,
    "deprecation": true,
    "return-undefined": true,
    "newline-before-return": true,
    "number-literal-format": true
  }
}
