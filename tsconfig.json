{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "outDir": "build",
    "inlineSourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
