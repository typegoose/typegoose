{
  "name": "@typegoose/typegoose",
  "version": "12.20.0",
  "description": "Define Mongoose models using TypeScript classes",
  "main": "lib/typegoose.js",
  "types": "lib/typegoose.d.ts",
  "type": "commonjs",
  "engines": {
    "node": ">=20.19.0"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:tests": "tsc -p tsconfig.buildTests.json",
    "lint": "eslint -c ./eslint.config.mjs \"./**/*.{js,ts,cjs,mjs,cts,mts}\"",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --collectCoverage",
    "test:watchCoverage": "jest --collectCoverage --watchAll",
    "test:types": "tstyche",
    "watch": "tsc -w -p tsconfig.buildTests.json",
    "clean": "rimraf lib .tsbuildinfo coverage doc build",
    "prepare": "husky",
    "website": "yarn --cwd website/ run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typegoose/typegoose.git"
  },
  "author": "Akos Szokodi <akos@codingsans.com> (http://codingsans.com)",
  "contributors": [
    "Ben305",
    "hasezoey <hasezoey@gmail.com>"
  ],
  "license": "MIT",
  "peerDependencies": {
    "mongoose": "~8.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.21",
    "@types/node": "~24.10.1",
    "@types/semver": "^7.7.1",
    "class-transformer": "0.5.1",
    "commitlint": "^20.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "mongodb-memory-server": "^10.2.2",
    "mongoose": "git+https://github.com/Automattic/mongoose.git#9.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.6",
    "tstyche": "^3.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "loglevel": "^1.9.2",
    "reflect-metadata": "^0.2.2",
    "semver": "^7.7.3",
    "tslib": "^2.8.1"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "keywords": [
    "typegoose",
    "mongoose",
    "orm",
    "mongodb",
    "class",
    "model",
    "schema",
    "odm"
  ],
  "bugs": {
    "url": "https://github.com/typegoose/typegoose/issues"
  },
  "homepage": "https://typegoose.github.io/typegoose/",
  "resolutions": {
    "micromatch": "~4.0.8"
  }
}
