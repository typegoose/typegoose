{
  "name": "typegoose",
  "version": "5.8.1",
  "description": "Define Mongoose models using TypeScript classes.",
  "main": "lib/typegoose.js",
  "engines": {
    "node": ">=8.10.0"
  },
  "files": [
    "lib/*.js",
    "lib/*.d.ts"
  ],
  "scripts": {
    "start": "npm run build && node ./lib/typegoose.js",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint --project tsconfig.json",
    "test": "npm run lint && nyc npm run mocha",
    "mocha": "npm run build && mocha \"./test/*.ts\" --timeout 15000",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean": "rimraf lib && rm .tsbuildinfo && rimraf .nyc_output && rimraf coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/szokodiakos/typegoose.git"
  },
  "types": "lib/typegoose.d.ts",
  "typings": "lib/typegoose.d.ts",
  "author": "Akos Szokodi <akos@codingsans.com> (http://codingsans.com)",
  "license": "MIT",
  "peerDependencies": {
    "mongoose": "^5.5.13"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "4.1.3",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.0",
    "@types/node": "8.10.0",
    "@types/chai-as-promised": "^7.1.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "coveralls": "^3.0.4",
    "mocha": "^6.1.4",
    "mongodb-memory-server-global": "^5.1.5",
    "mongoose": "^5.5.13",
    "mongoose-findorcreate": "3.0.0",
    "nyc": "^14.1.1",
    "prettier": "1.16.4",
    "prettier-tslint": "0.4.2",
    "rimraf": "2.6.2",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.3.0",
    "tslint": "5.17.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.1"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  }
}